<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <ActionBar title="Near Me" />
    
    <GridLayout rows="auto, *">
        <FlexboxLayout row="0" class="p-4 bg-white">
            <Label text="Current Location: " class="text-gray-600" />
            <Label text="{{ currentLocation }}" class="font-bold" />
        </FlexboxLayout>
        
        <ListView row="1" items="{{ nearbyHawkers }}" class="list-group">
            <ListView.itemTemplate>
                <GridLayout columns="*, auto" class="card">
                    <StackLayout col="0">
                        <Label text="{{ name }}" class="font-bold text-lg" />
                        <Label text="{{ address }}" class="text-gray-600" />
                        <FlexboxLayout>
                            <Label text="{{ crowdLevel }}" class="text-sm" />
                            <Label text=" â€¢ " class="text-sm text-gray-400" />
                            <Label text="{{ distance }}" class="text-sm" />
                        </FlexboxLayout>
                        <FlexboxLayout class="mt-2">
                            <Label text="&#xf3c5;" class="fas text-orange-500 mr-1" />
                            <Label text="Get Directions" class="text-orange-500" tap="{{ onGetDirections }}" />
                        </FlexboxLayout>
                    </StackLayout>
                    <StackLayout col="1" class="text-right">
                        <Label text="{{ rating }}" class="text-lg font-bold text-orange-500" />
                        <Label text="{{ waitTime }}" class="text-sm text-gray-600" textWrap="true" />
                    </StackLayout>
                </GridLayout>
            </ListView.itemTemplate>
        </ListView>
    </GridLayout>
</Page>